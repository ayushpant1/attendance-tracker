{{#if flashes}}
  {{#each flashes.error}}
    <script type="text/javascript">
      iziToast.show({
        message: '{{@this}}',
        color: 'red',
        position: 'topRight'
      });
    </script>
  {{/each}}
  {{#each flashes.info}}
    <script type="text/javascript">
      iziToast.show({
        message: '{{@this}}',
        color: 'blue',
        position: 'topRight'
      });
    </script>
  {{/each}}
  {{#each flashes.warning}}
    <script type="text/javascript">
      iziToast.show({
        message: '{{@this}}',
        color: 'yellow',
        position: 'topRight'
      });
    </script>
  {{/each}}
  {{#each flashes.success}}
    <script type="text/javascript">
      iziToast.show({
        message: '{{@this}}',
        color: 'green',
        position: 'topRight'
      });
    </script>
  {{/each}}
{{/if}}
